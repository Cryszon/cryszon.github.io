---
import { normalizeTrailingSlash } from "@reunmedia/astro-normalize-trailing-slash";
import { startCase } from "es-toolkit";

interface Segment {
  url: string;
  title: string;
}

interface Props {
  /**
   * Additional segments after "Home". Uses title cased URL segments by default.
   */
  additionalSegments?: Segment[];
  /**
   * Specify a custom string to use as the last segment title instead of title
   * cased URL segment.
   *
   * Specifying `additionalSegments` overrides this.
   */
  overrideLastSegmentTitle?: string;
}

let { additionalSegments, overrideLastSegmentTitle } = Astro.props;

let segments = [
  {
    title: "Home",
    url: "/",
  },
];

// Construct breadcrumb segments from URL if none were passed in the prop.
if (additionalSegments === undefined) {
  additionalSegments = [];

  const urlSegments = Astro.url.pathname.split("/");
  let currentPath = "/";
  additionalSegments = urlSegments
    // Ignore empty segments (first segment)
    .filter((x) => x)
    .map((segment) => {
      currentPath += segment + "/";
      return {
        url: currentPath,
        title: startCase(segment),
      };
    });
  if (overrideLastSegmentTitle) {
    const last = additionalSegments.at(-1);
    if (last) {
      last.title = overrideLastSegmentTitle;
    }
  }
}

segments = [...segments, ...additionalSegments];
---

<nav aria-label="breadcrumb" class="my-8">
  <ul class="flex list-['/']">
    {
      segments.map((segment) => (
        <li class="ml-4 pl-2">
          <a href={normalizeTrailingSlash(segment.url)}>{segment.title}</a>{" "}
        </li>
      ))
    }
  </ul>
</nav>
