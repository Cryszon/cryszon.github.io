---
import type { HTMLAttributes } from "astro/types";

interface Props {
  /**
   * Link target. If this is not empty, `<a>` tag is used.
   */
  href?: string;
  /**
   * Attributes for `<a>` tag if used.
   */
  aAttributes?: HTMLAttributes<"a">;
  /**
   * Attributes for `<span>` tag if used.
   */
  spanAttributes?: HTMLAttributes<"span">;
  class?: HTMLAttributes<"a" | "span">["class"];
}

const {
  href,
  aAttributes,
  spanAttributes,
  class: className = "",
} = Astro.props;
const Element = href ? "a" : "span";
const elAttributes = href
  ? {
      ...aAttributes,
      href: href,
    }
  : spanAttributes;
---

<Element {...elAttributes} class:list={[className]}>
  <slot />
</Element>
